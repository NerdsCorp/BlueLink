# BlueLink Advanced Configuration
# Copy this file to .env and modify as needed
# IMPORTANT: Never commit the actual .env file to version control!

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# SECRET_KEY: Used for JWT token signing and encryption
# CRITICAL: Change this in production! Generate a strong random key:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Token Expiration (in minutes, default: 60)
JWT_EXPIRE_MINUTES=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (default) - Good for development and small deployments
DATABASE_URL=sqlite:///./bluelink.db

# PostgreSQL example - Recommended for production
# DATABASE_URL=postgresql://user:password@localhost:5432/bluelink

# MySQL example
# DATABASE_URL=mysql://user:password@localhost:3306/bluelink

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Host to bind to (default: 0.0.0.0 for all interfaces)
# HOST=0.0.0.0

# Port to listen on (default: 8000)
# PORT=8000

# ============================================================================
# CORS SETTINGS (Optional)
# ============================================================================

# Comma-separated list of allowed origins for CORS
# Leave commented to allow all origins (development only!)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# ARDUINO SETTINGS (Optional)
# ============================================================================

# Default baud rate for serial communication
# ARDUINO_BAUD_RATE=115200

# Serial timeout in seconds
# ARDUINO_TIMEOUT=1
